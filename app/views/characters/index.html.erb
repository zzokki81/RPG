<div class="text-center">
<h1>All Characters: </h1>
<br>
<br>
<table class="characters">
  <thead>
    <tr>
      <th>Name:</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @characters.each do |character| %>
    <% if user_signed_in?  && character.user_id == current_user.id %>
      <tr>
        <td><%= character.name %></td>
        <td><%= link_to 'Show',character, :class => "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_character_path(character),:class => "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-primary btn-sm btn-danger"  %></td>
      </tr>
     <% end %>
     <tr>
       <td><%= character.name %></td>
       <td><%= link_to 'Show',character, :class => "btn btn-primary btn-sm" %></td>
     </tr>
  <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Character', new_character_path,:class => "btn btn-primary" %>
<% end %>
</div>
